<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323131">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textWord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_close"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textColor="#FF9800" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textWordExplain"
        app:layout_constraintTop_toBottomOf="@+id/textWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textColor="#FDFCFC" />

    <Button
        android:text="关闭"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textSize="14dp"
        android:padding="2dp"
        style="@style/Widget.Material3.Button"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="4dp" />

    <Button
        android:text="其它词典"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_other"
        app:layout_constraintEnd_toEndOf="parent"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textSize="14dp"
        android:padding="2dp"
        style="@style/Widget.Material3.Button"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textWordExplain"
        app:layout_constraintStart_toEndOf="@+id/b_workbook"
        android:layout_marginTop="8dp" />

    <Button
        android:text="生词本"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_workbook"
        app:layout_constraintEnd_toEndOf="parent"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textSize="14dp"
        android:padding="2dp"
        style="@style/Widget.Material3.Button"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textWordExplain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.249"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F57F17" />
</androidx.constraintlayout.widget.ConstraintLayout>